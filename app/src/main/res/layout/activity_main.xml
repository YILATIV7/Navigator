<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navigator"
        android:gravity="center"
        android:textSize="22pt"
        android:padding="8dp"
        android:background="@color/view_background"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Визначити початкове місцезнаходження:"
        android:gravity="center"
        android:textSize="14pt"
        android:padding="8dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/scanNFCButton"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="За NFC міткою"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="16dp"/>

    <Button
        android:id="@+id/scanQRButton"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="За QR кодом"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="16dp"/>

    <Button
        android:id="@+id/viewMapButton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:text="Перегляд планів"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="16dp"/>

</LinearLayout>